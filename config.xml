<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.attendancelog.amaranthus" version="0.5.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Attendance Log</name>
    <description>Attendance Management software</description>
    <author email="esteban.a.morales.morales@gmail.com">Esteban Morales</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="https://attendancelog.xyz" />
    <allow-intent href="https://www.attendancelog.xyz" />
    <allow-intent href="mailto:bandito-dev@outlook.com" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Needs access for photo library to use a photo as a picture profile.</string>
    </edit-config>
    <platform name="android">
        <config-file parent="/manifest" target="AndroidManifest.xml" xmlns:android="http://schemas.android.com/apk/res/android">
            <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
        </config-file>
    </platform>
    <preference name="BackupWebStorage" value="none" />
    <allow-navigation href="http://192.168.1.247:8100" />
    <allow-navigation href="http://192.168.1.247:8101" />
    <allow-navigation href="http://172.29.94.225:8100" />
